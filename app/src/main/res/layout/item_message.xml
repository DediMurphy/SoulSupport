<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cht_bot_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:background="@drawable/receive_box"
        android:backgroundTint="@color/secondary_400"
        android:fontFamily="@font/poppins_regular"
        android:padding="14dp"
        android:text="@string/this_is_a_message"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/cht_user_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:visibility="visible"
        android:background="@drawable/send_box"
        android:backgroundTint="@color/secondary_100"
        android:fontFamily="@font/poppins_regular"
        android:padding="14dp"
        android:text="@string/this_is_a_message"
        android:textSize="12sp" />

</RelativeLayout>