<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cht_bot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/receive_box"
        android:backgroundTint="@color/secondary_400"
        android:fontFamily="@font/poppins_regular"
        android:padding="14dp"
        android:text="@string/this_is_a_message"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/cht_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/send_box"
        android:backgroundTint="@color/primary_700"
        android:fontFamily="@font/poppins_regular"
        android:padding="14dp"
        android:text="@string/this_is_a_message"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="visible"
        tools:ignore="RelativeOverlap,TextContrastCheck" />

    <ProgressBar
        android:id="@+id/typingIndicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cht_bot_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

</RelativeLayout>