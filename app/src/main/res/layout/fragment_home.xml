<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.HomeFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/name_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_welcome_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_bold_italic"
                android:text="@string/hello_name"
                android:textColor="@color/primary_900"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/poppins_semi_bold_italic"
                android:text="@string/tv_name"
                android:textColor="@color/primary_900"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_welcome_name"
                app:layout_constraintStart_toEndOf="@+id/tv_welcome_name"
                app:layout_constraintTop_toTopOf="@+id/tv_welcome_name" />

            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/secondary_200"
                android:padding="5dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_name">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/user" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_descName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/poppins_italic"
                android:text="@string/tv_home_welcome"
                android:textColor="@color/primary_900"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_welcome_name" />

            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="18dp"
                android:background="@drawable/banner_background"
                android:contentDescription="@string/banner_image"
                app:layout_constraintTop_toBottomOf="@id/tv_descName"
                tools:layout_editor_absoluteX="18dp" />

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/img_home"
                app:layout_constraintBottom_toBottomOf="@+id/banner"
                app:layout_constraintEnd_toEndOf="@+id/banner"
                app:layout_constraintTop_toBottomOf="@id/tv_descName" />

            <TextView
                android:id="@+id/desc1"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_semi_bold_italic"
                android:text="Friendship Beyond"
                android:textColor="@color/primary_50"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/desc2"
                app:layout_constraintStart_toStartOf="@+id/banner"
                app:layout_constraintTop_toTopOf="@id/banner" />

            <TextView
                android:id="@+id/desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:fontFamily="@font/poppins_semi_bold_italic"
                android:text="Words:"
                android:textColor="@color/primary_50"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="@+id/desc1"
                app:layout_constraintHorizontal_bias="0.301"
                app:layout_constraintStart_toStartOf="@+id/banner"
                app:layout_constraintTop_toTopOf="@+id/banner" />

            <TextView
                android:id="@+id/desc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_italic"
                android:text="Your mental health support"
                android:textColor="@color/primary_50"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/banner"
                app:layout_constraintStart_toStartOf="@+id/banner"
                app:layout_constraintTop_toBottomOf="@id/desc2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/title_menu"
                android:textColor="@color/primary_900"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/banner"
                app:layout_constraintTop_toBottomOf="@+id/banner" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Menu1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="18dp"
                app:cardBackgroundColor="@color/primary_50"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_chatbot"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_chat"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_chatbot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="@string/menu_chatbot"
                        android:textColor="@color/primary_900"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvDesc_chatbot"
                        app:layout_constraintStart_toEndOf="@id/iv_chatbot"
                        app:layout_constraintTop_toTopOf="@+id/iv_chatbot" />

                    <TextView
                        android:id="@+id/tvDesc_chatbot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="35dp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="4dp"
                        android:text="Save place to share your thought"
                        android:textColor="@color/primary_900"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_chatbot"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_chatbot"
                        app:layout_constraintTop_toBottomOf="@id/tv_chatbot" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/round_back_notif"
                        android:src="@drawable/ic_right_arrow"
                        app:layout_constraintBottom_toBottomOf="@id/tvDesc_chatbot"
                        app:layout_constraintStart_toEndOf="@id/tvDesc_chatbot"
                        app:layout_constraintTop_toTopOf="@id/tv_chatbot"
                        app:tint="@color/primary_900" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Menu2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                app:cardBackgroundColor="@color/primary_50"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Menu1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_notes"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_note"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_notes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="@string/menu_note"
                        android:textColor="@color/primary_900"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvDesc_notes"
                        app:layout_constraintStart_toEndOf="@id/iv_notes"
                        app:layout_constraintTop_toTopOf="@+id/iv_notes" />

                    <TextView
                        android:id="@+id/tvDesc_notes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="35dp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="4dp"
                        android:text="Tell us about your day"
                        android:textColor="@color/primary_900"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_notes"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_notes"
                        app:layout_constraintTop_toBottomOf="@id/tv_notes" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/round_back_notif"
                        android:src="@drawable/ic_right_arrow"
                        app:layout_constraintBottom_toBottomOf="@id/tvDesc_notes"
                        app:layout_constraintStart_toEndOf="@id/tvDesc_notes"
                        app:layout_constraintTop_toTopOf="@id/tv_notes"
                        app:tint="@color/primary_900" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Menu3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                app:cardBackgroundColor="@color/primary_50"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Menu2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_meditate"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_mediasi"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_meditate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="@string/menu_meditation"
                        android:textColor="@color/primary_900"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvDesc_meditate"
                        app:layout_constraintStart_toEndOf="@id/iv_meditate"
                        app:layout_constraintTop_toTopOf="@+id/iv_meditate" />

                    <TextView
                        android:id="@+id/tvDesc_meditate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="35dp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="4dp"
                        android:text="Get your soul space to relax"
                        android:textColor="@color/primary_900"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_meditate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_meditate"
                        app:layout_constraintTop_toBottomOf="@id/tv_meditate" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/round_back_notif"
                        android:src="@drawable/ic_right_arrow"
                        app:layout_constraintBottom_toBottomOf="@id/tvDesc_meditate"
                        app:layout_constraintStart_toEndOf="@id/tvDesc_meditate"
                        app:layout_constraintTop_toTopOf="@id/tv_meditate"
                        app:tint="@color/primary_900" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Menu4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/primary_50"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Menu3"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_article"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_article"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_article"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="1dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="@string/menu_article"
                        android:textColor="@color/primary_900"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/tvDesc_article"
                        app:layout_constraintStart_toEndOf="@id/iv_article"
                        app:layout_constraintTop_toTopOf="@+id/iv_article" />

                    <TextView
                        android:id="@+id/tvDesc_article"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="35dp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="4dp"
                        android:text="All about mental health awareness"
                        android:textColor="@color/primary_900"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_article"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tv_article"
                        app:layout_constraintTop_toBottomOf="@id/tv_article" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/round_back_notif"
                        android:src="@drawable/ic_right_arrow"
                        app:layout_constraintBottom_toBottomOf="@id/tvDesc_article"
                        app:layout_constraintStart_toEndOf="@id/tvDesc_article"
                        app:layout_constraintTop_toTopOf="@id/tv_article"
                        app:tint="@color/primary_900" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>