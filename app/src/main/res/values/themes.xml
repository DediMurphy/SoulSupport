<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SoulSupport" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/secondary_800</item>
        <item name="android:colorBackground">@color/primary_500</item>
        <item name="colorOnBackground">@color/primary_500</item>
    </style>

    <style name="Theme.SoulSupport" parent="Base.Theme.SoulSupport" />

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/primary_900</item>
        <item name="colorSwitchThumbNormal">@color/primary_700</item>
        <item name="android:colorForeground">@color/secondary_800</item>
    </style>

    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/secondary_800</item>
        <item name="colorSwitchThumbNormal">@color/secondary_800</item>
        <item name="android:colorForeground">@color/secondary_800</item>
    </style>
</resources>